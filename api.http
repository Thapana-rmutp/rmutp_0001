# Test API
@username={{$dotenv USERNAME}}
@password={{$dotenv PASSWORD}}
@email={{$dotenv EMAIL}}
@Content={{$dotenv CONTENT_TYPE}}
@Authorization={{$dotenv AUTHORIZATION}}
@post_register={{$dotenv POST_REGISTER}}
@get_alluser={{$dotenv GET_ALLUSER}}
@post_login={{$dotenv POST_LOGIN}}
@get_profile={{$dotenv GET_PROFILE}}
@put_updateprofile={{$dotenv PUT_UPDATEPROFILE}}
